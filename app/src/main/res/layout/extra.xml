<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="Enter Your Event Name..."
        android:inputType="text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/club_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/event_name"
        android:layout_alignStart="@+id/event_name"
        android:layout_below="@+id/event_name"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Enter  Club name.."
        android:inputType="text" />


    <EditText
        android:id="@+id/decription_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/club_name"
        android:layout_alignStart="@+id/club_name"
        android:layout_below="@+id/club_name"
        android:ems="10"
        android:hint="Decription"
        android:inputType="text" />

    <Button
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:text="POST" />


</LinearLayout>