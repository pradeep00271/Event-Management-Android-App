<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.example.student.clubhub.SecondPage"
        android:orientation="vertical">


        <EditText
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Your Name..."
            android:inputType="textPersonName"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/rollno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_name"
            android:layout_alignStart="@+id/event_name"
            android:layout_below="@+id/event_name"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:hint="Enter Your RollNumber.."
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rollno"
            android:layout_alignStart="@+id/rollno"
            android:layout_below="@+id/rollno"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter Your EmailID..."
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_below="@+id/email"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:hint="Enter Your Phone Number..."
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/club_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rotract_chk"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"

            android:layout_toLeftOf="@+id/rotract_chk"
            android:layout_toStartOf="@+id/rotract_chk"
            android:text="Club Names" />


        <CheckBox
            android:id="@+id/rotract_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotract"
            android:onClick="insert"
            />


        <CheckBox
            android:id="@+id/ctf_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CTF" />

        <CheckBox
            android:id="@+id/leo_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LEO"
            android:onClick="insert"
            android:layout_alignBaseline="@+id/ctf_chk"
            android:layout_alignBottom="@+id/ctf_chk"
            android:layout_alignRight="@+id/phone"
            android:layout_alignEnd="@+id/phone" />

        <CheckBox
            android:id="@+id/madavam_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MADHAVAM"
            android:layout_below="@+id/ctf_chk"
            android:layout_alignLeft="@+id/ctf_chk"
            android:layout_alignStart="@+id/ctf_chk" />

        <CheckBox
            android:id="@+id/akriti_chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKRITI"
            android:layout_below="@+id/madavam_chk"
            android:layout_alignLeft="@+id/madavam_chk"
            android:layout_alignStart="@+id/madavam_chk" />

        <Button
            android:id="@+id/insert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="INSERT"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

